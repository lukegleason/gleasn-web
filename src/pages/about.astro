---
import Layout from '~/layouts/LandingLayout.astro';

import Testimonials from '~/components/widgets/Testimonials.astro';
import Content from '~/components/widgets/Content.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Stats from '~/components/widgets/Stats.astro';

const metadata = {
  title: 'thumbnails',
};
---

<Layout metadata={metadata}>
  <Content 
  id="about"

  image={{
    src: 'https://i.imgur.com/zfYNQGQ.jpeg',
    alt: 'Colorful Image',
    loading: 'eager',
  }}
>
  <Fragment slot="content">
    <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Hey, I'm gleasn.</h2>
    <p>
      I'm a thumbnail designer and content creator based in Los Angeles, California. Growing up I always wanted to be a YouTuber and my desire to be within the space as never changed.
    </p>
    <br />
    <p>
      meow.
    </p>
  </Fragment>
</Content>

  <Stats
  stats={[
    { title: 'Thumbnails Made', amount: '400+' },
    { title: 'Happy Clients', amount: '30+' },
    { title: 'Views Generated', amount: '40M+' },
  ]}>
  </Stats>

  <Testimonials
    title="Words from real clients"
    testimonials={[
      {
        testimonial: `Gleasn is absolutely crazy with the thumbnails and goes above and beyond. He takes direction perfectly and is quick with the turnaround. Highly recommend this guy`,
        name: 'Jimmy Here',
        job: 'Reaction YouTuber | 1.61M subscribers',
        image: {
          src: 'https://yt3.googleusercontent.com/ytc/AIdro_lBDbSREnbLJdEpxrfTWuqfCWhi4M80_TOalqpDL9gn2G5J=s900-c-k-c0x00ffffff-no-rj',
          alt: 'Jimmy Image',
        },
      },
      {
        testimonial: `Gleasn is consistently improving and very flexible and adaptive as YouTube continues to evolve. Very quick work with high quality. I highly recommend him as an editor`,
        name: 'Simply',
        job: 'Gaming YouTuber | 164K subscribers',
        image: {
          src: 'https://yt3.googleusercontent.com/ytc/AIdro_lcRexex2XImdf9TnVItarJU6xyScvBFKZDYW-nt1UQ4Q=s160-c-k-c0x00ffffff-no-rj',
          alt: 'Simply Image',
        },
      },
      {
        testimonial: `Gleasn is basically the goat. Easy to work with and super chill. Might be the greatest thumbnail guy on the planet to be honest...`,
        name: 'Cake Hoarder',
        job: 'Retro Reseller YouTuber | 442K subscribers',
        image: {
          src: 'https://yt3.googleusercontent.com/qOAldn58YQxsznhAEx0NA_Vfn_BYX5vozn0M1xalgKvQCww4LRnW2-7wrMCaLpFKJHn2JoNNqt8=s160-c-k-c0x00ffffff-no-rj',
          alt: 'Cake Hoarder Image',
        },
      },
    ]}
  />

  <ContactUs
  id="form"
  title="Drop me a message today!"
  subtitle="Let's work together to make your videos shine. Whether you're a seasoned creator or just starting out, I'm here to help you achieve your goals with top-notch thumbnails that deliver results."
  inputs={[
    {
      type: 'text',
      name: 'name',
      label: 'Name',
    },
    {
      type: 'email',
      name: 'email',
      label: 'Email',
    },
  ]}
  textarea={{
    label: 'Message',
  }}
  description="I will typically respond within 24 business hours."
  >
  </ContactUs>
</Layout>